html
	head
		title Simon Game

		link(href='styles.css', rel='stylesheet')

	body
		.device
			.buttons
				.button#green
				.button#red
				.button#yellow
				.button#blue
			.inner-borders
				.border.border-vertical
				.border.border-horizontal
			.controls
				.brand
					.title Simon
					.subtitle by #[a(href="https://dgrcode.github.io/portfolio/" target="_blank") Daniel Gonz√°lez Reina]
				.controls-wrapper
					.screen
						.display --
						.label COUNT
					.control-button
						.btn.btn-start#start
						.label START
					.control-button
						.btn.btn-strict#strict
						.label STRICT
					.light
				.switch-wrapper
					.hlabel#label-on ON
					.switch-container
						input#switch(type="checkbox")
						label(for="switch")
